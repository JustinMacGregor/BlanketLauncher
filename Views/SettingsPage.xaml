<Page
    x:Class="Blanket_Launcher.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Blanket_Launcher"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Name="stackPanel" Orientation="Vertical" Margin="15,15,0,0">
            <TextBlock Text="Stores" FontSize="48"></TextBlock>
            <ToggleSwitch Name="eshop" Header="eShop" Margin="0,10,0,0"></ToggleSwitch>
            <ToggleSwitch Name="playstationstore" Header="Playstation Store" Margin="0,10,0,0"></ToggleSwitch>
            <ToggleSwitch Name="xboxstore" Header="Xbox Store" Margin="0,10,0,0"></ToggleSwitch>
            <ToggleSwitch Name="origin" Header="Origin" Margin="0,10,0,0"></ToggleSwitch>
            <ToggleSwitch Name="battlenet" Header="Battlenet" Margin="0,10,0,0"></ToggleSwitch>
            <ToggleSwitch Name="steam" Header="Steam" Margin="0,10,0,0"></ToggleSwitch>
        </StackPanel>
    </Grid>
</Page>
